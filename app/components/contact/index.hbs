<section
  id="contact"
  class="flex items-center bg-primary text-white h-full min-h-[25rem] py-10 md:p-10 lg:px-[15%]"
>

  <div class="container mx-auto flex flex-col items-center">
    <h2 class="text-4xl font-bold text-center mb-8 md:mb-12">CONTACT</h2>

    <p class="text-lg mb-4">
      "Would you like to work with me? Awesome!"
    </p>

    <button
      class="relative px-4 py-1 border-2 text-2xl border-white bg-primary text-white font-bold transition-all duration-300 ease-in-out overflow-hidden group"
      {{on "click" this.toggleModal}}
    >
      <span
        class="relative z-10 transition-all duration-300 ease-in-out group-hover:text-primary"
      >Let's Talk</span>
      <span
        class="absolute inset-0 bg-white transition-all duration-300 ease-in-out group-hover:w-full w-0 z-0"
      ></span>
    </button>
  </div>

  <!-- Modal -->
  {{#if this.isModalOpen}}
    <div
      id="modal"
      class="fixed inset-0 flex justify-center items-center bg-gray-800 bg-opacity-50 z-20"
    >
      <div class="bg-white p-6 rounded-lg max-w-lg w-full">
        <!-- Modal Content -->
        <h2 class="text-2xl font-semibold mb-4">Contact Form</h2>
        <form>
          <div class="mb-4">
            <label for="name" class="block text-sm font-medium">Your Name</label>
            <input
              id="name"
              type="text"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg"
              placeholder="Your name"
            />
          </div>
          <div class="mb-4">
            <label for="email" class="block text-sm font-medium">Your Email</label>
            <input
              id="email"
              type="email"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg"
              placeholder="Your email"
            />
          </div>
          <div class="mb-4">
            <label for="message" class="block text-sm font-medium">Your Message</label>
            <textarea
              id="message"
              rows="4"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg"
              placeholder="Your message"
            ></textarea>
          </div>
          <div class="flex justify-end">
            <button
              type="button"
              class="bg-gray-500 text-white px-6 py-2 rounded-lg mr-2 hover:bg-gray-600"
              {{on "click" this.closeModal}}
            >
              Close
            </button>
            <button
              type="submit"
              class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  {{/if}}

</section>