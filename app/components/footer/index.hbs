<footer class="bg-dark-gray text-white py-10">
  <div class="container flex flex-col items-center mx-auto">

    <!-- Back to Top Button -->
    <div
      class="inline-block text-center animate-bounce cursor-pointer text-white hover:translate-y-[-2px] transition-all duration-200 ease-in mb-6"
      {{on "click" this.scrollToTop}}
    >

      <i class="fa fa-angle-up fa-2x w-10" aria-hidden="true"></i>

    </div>

    <!-- GitHub and LinkedIn buttons in your footer.hbs -->
    <div class="flex gap-12 justify-center">
      <!-- GitHub Button -->
      <a
        href="https://github.com/bobson"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white text-3xl hover:translate-y-[-2px] h-20 flex items-center justify-center rounded-full transition-all duration-200 ease-in"
        aria-label="GitHub"
      >
        <i class="fab fa-github"></i>
        <!-- Font Awesome GitHub Icon -->
      </a>

      <!-- LinkedIn Button -->
      <a
        href="https://linkedin.com/in/slobodan-markoski-93ab0517a/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white text-3xl flex hover:translate-y-[-2px] items-center justify-center rounded-full transition-all duration-200 ease-in"
        aria-label="LinkedIn"
      >
        <i class="fab fa-linkedin"></i>
        <!-- Font Awesome LinkedIn Icon -->
      </a>
    </div>

    <!-- Horizontal Line -->
    <hr class="border-t-2 border-white/20 w-1/3 mx-auto mb-8" />

    <!-- Footer Text (Current Year and Name) -->
    <p class="text-center text-gray-400">
      Â©
      {{this.currentYear}}
      - Developed by
      <a
        href="https://github.com/bobson"
        target="_blank"
        rel="noopener noreferrer"
        class="text-blue-500 hover:underline"
      >
        Slobodan Markoski
      </a>
    </p>

  </div>
</footer>